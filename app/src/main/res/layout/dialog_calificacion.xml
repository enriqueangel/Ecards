<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/actionMenuTextColor"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textSize="19sp"
            android:text="CalificÃ¡ la tarea."
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/actionMenuTextColor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="Rendimiento." />

        <RatingBar
            android:id="@+id/rendimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="0.5"
            android:stepSize="0.5"
            android:numStars="5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/actionMenuTextColor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="Usabilidad." />

        <RatingBar
            android:id="@+id/usabilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="1"
            android:stepSize="0.5"
            android:numStars="5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/actionMenuTextColor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="Calidad." />

        <RatingBar
            android:id="@+id/calidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="1.5"
            android:stepSize="0.5"
            android:numStars="5" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/CampoObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/observaciones"
            android:layout_marginTop="4dp"
            app:hintTextAppearance="@style/FloatingLabel"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/Error">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/observaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:theme="@style/EditText"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>