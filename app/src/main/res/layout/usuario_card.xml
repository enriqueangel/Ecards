<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/campo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_alignParentStart="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:civ_border_color="@color/blanco"
                app:civ_border_width="1dp"
                android:src="@drawable/imagen_perfil" />

        </LinearLayout>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/campo_img"
            android:layout_toRightOf="@id/campo_img"
            android:layout_marginTop="4dip"
            android:text="Nombre"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/campo_img" />

        <TextView
            android:id="@+id/campo_horas_laborales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/campo_img"
            android:text="Horas Laborales:"
            android:textSize="13sp"
            android:layout_toEndOf="@id/campo_img" />

        <TextView
            android:id="@+id/campo_horas_trabajadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@id/campo_horas_laborales"
            android:layout_toRightOf="@id/campo_img"
            android:text="Horas Trabajadas:"
            android:textSize="13sp"
            android:layout_toEndOf="@id/campo_img" />

        <TextView
            android:id="@+id/horas_laborales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/campo_horas_laborales"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:text="15:00"
            android:textSize="13sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />

        <TextView
            android:id="@+id/horas_trabajadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/campo_horas_trabajadas"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:text="30:00"
            android:textSize="13sp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

