<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_pin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.woldev.enriq.ecards.ActivityLoginPin"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textAlignment="center"
                android:text="Bienvenido"
                android:textSize="22sp"
                android:textColor="?attr/actionMenuTextColor"
                />

            <TextView
                android:id="@+id/textViewbienv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="Bienvenido"
                android:textSize="25sp"
                android:textColor="?attr/actionMenuTextColor"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN:"
                android:textSize="20sp"
                android:textColor="?attr/actionMenuTextColor"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/campo_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/ingrese_pin"
                app:hintTextAppearance="@style/FloatingLabel"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                app:errorTextAppearance="@style/Error"
                app:passwordToggleTint="@color/casi_negro">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextIngresePIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:theme="@style/EditText"
                    android:maxLength="4"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/buttonIngresarpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="@string/ingresar"
                android:theme="@style/PrimaryButton"
                />

            <TextView
                android:text="@string/olvide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewOlviPIN"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/fondo_oscuro"
                android:contextClickable="false"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
